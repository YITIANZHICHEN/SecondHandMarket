<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.PublishItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 工具栏 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

        <!-- 图片上传区域 -->
        <LinearLayout
            android:id="@+id/image_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/image_upload_background"
            android:clickable="true"
            android:focusable="true">

            <!-- 图片预览（初始隐藏） -->
            <ImageView
                android:id="@+id/item_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:src="@tools:sample/avatars" />

            <!-- 上传提示文字 -->
            <TextView
                android:id="@+id/image_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="点击上传商品图片\n（支持jpg、png格式）"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:drawableTop="@drawable/ic_camera_alt"
                android:drawablePadding="8dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- 商品标题 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="商品标题 *"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:minLines="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 商品描述 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="商品描述 *"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:minLines="3"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 商品价格 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:prefixText="￥"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="商品价格 *"
                android:inputType="numberDecimal"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 分类选择 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="商品分类"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/spinner_background"
            android:paddingHorizontal="16dp"
            android:popupBackground="@android:color/white" />

        <!-- 商品成色 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:text="商品成色"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/condition_spinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/spinner_background"
            android:paddingHorizontal="16dp"
            android:popupBackground="@android:color/white" />

        <!-- 发布按钮 -->
        <Button
            android:id="@+id/publish_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:text="发布商品"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary"
            android:elevation="2dp" />

        <!-- 提示文字 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="* 表示必填项"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>